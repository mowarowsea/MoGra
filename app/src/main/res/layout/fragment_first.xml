<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutBase"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <LinearLayout
        android:id="@+id/layoutOwner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lblDirectory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/target_directory"
            android:textSize="@dimen/textViewFontSize" />

        <LinearLayout
            android:id="@+id/layoutDirectory"
            android:layout_width="match_parent"
            android:layout_height="@dimen/controlHeight"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/txtDirectory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="@dimen/fab_margin"
                android:layout_weight="1"
                android:text="@string/target_directory"
                android:textSize="@dimen/textViewFontSize" />

            <Button
                android:id="@+id/btnDirectory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_horizontal"
                android:text="@string/show_dialog" />
        </LinearLayout>

        <TextView
            android:id="@+id/lblOrderBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_by"
            android:textSize="@dimen/textViewFontSize" />

        <Spinner
            android:id="@+id/spnOrderBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_margin"
            android:contentDescription="@string/order_by"
            android:minHeight="@dimen/controlHeight" />

        <TextView
            android:id="@+id/lblOrient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auto_orient"
            android:textSize="@dimen/textViewFontSize" />

        <Spinner
            android:id="@+id/spnOrient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_margin"
            android:contentDescription="@string/auto_orient"
            android:minHeight="@dimen/controlHeight" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/fab_margin"
            android:minHeight="@dimen/controlHeight"
            android:text="@string/start" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>